{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "DOM"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "tiny-bilibili-ws": [
        "src/index.ts"
      ],
      "tiny-bilibili-ws/browser": [
        "src/browser.ts"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
